#include <bits/stdc++.h>
using namespace std;

void Cantor(int n) {
	if (n == 0) {
		cout << "-";
		return;
	}
	Cantor(n - 1);
	for (int i = 0; i < static_cast<int>(pow(3, n - 1)); i++) cout << " ";
	Cantor(n - 1);
}

int main() {
	cin.tie(0)->sync_with_stdio(0);
	int n; while (cin >> n) {
		Cantor(n);
		cout << "\n";
	}
}