#include <bits/stdc++.h>
using namespace std;

int arr[100];

int main() {
	cin.tie(0)->sync_with_stdio(0);
	int n; cin >> n;
	for (int i = 0; i < n; i++) cin >> arr[i];
	int ans = 0, pre = arr[n - 1];
	for (int i = n - 2; i >= 0; i--) {
		if (arr[i] >= pre) {
			ans += arr[i] - pre + 1;
			pre--;
		}
		else pre = arr[i];
	}
	cout << ans;
}